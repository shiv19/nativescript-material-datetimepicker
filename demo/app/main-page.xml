<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page"
  xmlns:ui="nativescript-material-datetimepicker">
  <StackLayout class="p-20">
    <Label text="{{ date }}" class="t-20 text-center c-black" textWrap="true"/>
    <Button text="Open Date Picker" tap="{{ selectDate }}" />
    <Label text="{{ time }}" class="t-20 text-center c-black" textWrap="true"/>
    <Button text="Open Time Picker" tap="{{ selectTime }}" />
  </StackLayout>
</Page>